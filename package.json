{
  "name": "node-url",
  "version": "0.0.0",
  "repository": "lukeed/node-url",
  "description": "A 1.5kB browser polyfill for the Node.js `URL` and `URLSearchParams` classes",
  "module": "dist/urlshim.mjs",
  "unpkg": "dist/urlshim.min.js",
  "main": "dist/urlshim.js",
  "types": "urlshim.d.ts",
  "umd:name": "urlshim",
  "license": "MIT",
  "author": {
    "name": "Luke Edwards",
    "email": "luke.edwards05@gmail.com",
    "url": "https://lukeed.com"
  },
  "files": [
    "*.d.ts",
    "dist"
  ],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "build": "bundt",
    "pretest": "npm run build",
    "test": "jest --coverage"
  },
  "keywords": [
    "nodejs",
    "polyfill",
    "shim",
    "url",
    "urlsearchparams"
  ],
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@babel/plugin-transform-modules-commonjs": "7.7.5",
    "babel-jest": "24.9.0",
    "bundt": "0.4.0",
    "jest": "24.9.0",
    "jest-puppeteer": "4.3.0",
    "prettier": "1.19.1",
    "puppeteer": "2.0.0"
  },
  "jest": {
    "cacheDirectory": "<rootDir>/.jestcache",
    "coverageDirectory": "<rootDir>/coverage/",
    "collectCoverageFrom": ["src/**"],
    "testMatch": ["<rootDir>/test/*"],
    "transform": {
      "\\.js$": "babel-jest"
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-modules-commonjs"
    ]
  }
}
